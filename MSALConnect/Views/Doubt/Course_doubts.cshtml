@{
    ViewBag.Title = "Course_doubts";
}

<link href="../../Styles/Course_doubts.css" type="text/css" rel="stylesheet" />

@model MSALConnect.Models.Doubt

@using (Html.BeginForm())
{
    <div class="newDoub">
        <h2>Dúvidas</h2>
        <div class="form-horizontal">
            <div class="form-group">
                <h4>Question:</h4>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.question, new {htmlAttributes = new {@class = "form-control"}})
                    @Html.ValidationMessageFor(model => model.question, "", new {@class = "text-danger"})
                </div>
            </div>

            <div class="form-group">
                <h4>Content:</h4>
                <div class="col-md-10">
                    @Html.TextAreaFor(model => model.content, new {htmlAttributes = new {@class = "form-control", rows = "300", cols = "300"}})
                    @Html.ValidationMessageFor(model => model.content, "", new {@class = "text-danger"})
                </div>
            </div>

            <div class="form-group">
                <div class="inputDir">
                    <input type="submit" value="Create"/>
                </div>
            </div>
        </div>
    </div>
}

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }




        @foreach (var doubt in ViewBag.Doubts)
        {
            <div class="contentDoubts">

                <p class="getCorsesP"> @Html.ActionLink((string)doubt.question, "Index", "Answer", new { id = @doubt.doubtID, Course_id = @ViewBag.Course_id }, null)</p>

                <div>@doubt.content</div>

            </div>



        }




